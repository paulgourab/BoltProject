---
import ProfileImage from './ProfileImage.astro';
import ProfileContent from './ProfileContent.astro';
---

<div class="profile-section">
  <ProfileImage />
  <ProfileContent />
</div>

<style>
  .profile-section {
    display: flex;
    gap: 2rem;
    align-items: center;
    margin-bottom: 2rem;
  }
  @media (max-width: 768px) {
    .profile-section {
      flex-direction: column;
      text-align: center;
    }
  }
</style>